{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch quiz",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/quiz/ransac/Debug/quizRansac",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "$PATH:${workspaceFolder}/src/quiz/ransac/Debug"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch main app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/environment",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch quiz debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/quiz/debug/Ransac",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/src/quiz",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}